<!DOCTYPE html>
<html>
  <head>
    <title>TwitchTvRandomStreamFinder</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://embed.twitch.tv/embed/v1.js"></script>
    <script type="text/javascript">
      function newChannel(){
        const streamPlayer = document.querySelector("iframe")
        fetch("https://randomstreamfinder.herokuapp.com/new_channel")
          .then(res => res.json())
          .then(json =>{
              streamPlayer.remove()
              new Twitch.Embed("twitch-embed", {
                  height:"97%",
                  width:"100%",
                  channel: json.channel,
                  parent: ["localhost", "randomstreamfinder.herokuapp.com"]
              });
          })
        }

        
      function dropdown(){
        const menu = document.querySelector('.hamburger')
        if(menu.style.display === "none"){
          menu.style.display = "block"
        }
        else menu.style.display = "none"
      }
    </script>
  </head>

  <body>
   
  <div class = "bg-dark">
    <nav class="navbar-dark navbar-expand" >
      <ul class="navbar-nav">
        <li class= "nav-item">
          <h5 class= "navbar-text text-primary logo mx-1">Random Stream Finder</h5>
        </li>
        <% if current_page?(root_path) %>
          <li class="nav-item">
           <a href="#" onclick="newChannel()" class="nav-link">New Stream</a>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Home", root_path, class:"nav-link" %>
          </li>
        <% end %>
        <a href="javascript:void(0);" class="icon nav-icon" onclick="dropdown()">
          <%= image_tag("hambuger_icon.png") %>
         </a>
      </ul>

      <ul class = "navbar-nav hideforphone">
        <li class="nav-item">
          <%= link_to "Browse Recommendations", recommendations_path, class: "nav-link" %>
        </li>
        <% if logged_in? %>
          <li class='nav-item'>
            <%= link_to "Create a Recommendation",
              new_user_recommendation_path(current_user, channel_name: @channel),
              class: "nav-link"
            %>
          </li>
          <li class="nav-item">
            <%= link_to "View Profile Page", user_path(current_user), class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "logout", logout_path, class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", login_path, class: 'nav-link' %>
          </li>
          <li class = "nav-item">
            <%= link_to "Signup", new_user_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>

      <ul class = "navbar-nav hamburger">
        <li class="nav-item">
          <%= link_to "Browse Recommendations", recommendations_path, class: "nav-link" %>
        </li>
        <% if logged_in? %>
          <li class='nav-item'>
            <%= link_to "Create a Recommendation",
              new_user_recommendation_path(current_user, channel_name: @channel),
              class: "nav-link"
            %>
          </li>
          <li class="nav-item">
            <%= link_to "View Profile Page", user_path(current_user), class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "logout", logout_path, class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", login_path, class: 'nav-link' %>
          </li>
          <li class = "nav-item">
            <%= link_to "Signup", new_user_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>

<% flash.each do |type, msg| %>
  <div class = "alert alert-primary" role = "alert">
    <%= msg %>
  </div>
<% end %>
<%= yield %>
</body>

</html>