<div class = "d-flex flex-row flex-wrap">
    <% recommendations.each do |rec| %>
        <div class= "p-2 w-25 recommendation-card">
            <div class="d-flex justify-content-center">
                <%=link_to image_tag(rec.channel.profile_image_url,size: "100x100"), channel_path(rec.channel) %>
            </div>
            <div class= "recommendation-text">
                <%= link_to "#{rec.channel.name}'s Recommendation", user_recommendation_path(rec.user,rec),class: "align-top" %>
                <div class= "description"><%= rec.content %></div>
            </div>
        </div>
    <% end %>
</div>